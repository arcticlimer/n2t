/**
 * Computes the sum of two bits.
 */

CHIP HalfAdder {
    IN a, b;    // 1-bit inputs
    OUT sum,    // Right bit of a + b
        carry;  // Left bit of a + b

    PARTS:
    Or (a=a, b=b, out=aOrB);
    And (a=a, b=b, out=aAndB);
    DMux (in=aOrB, sel=aAndB, a=sum, b=carry);
}
